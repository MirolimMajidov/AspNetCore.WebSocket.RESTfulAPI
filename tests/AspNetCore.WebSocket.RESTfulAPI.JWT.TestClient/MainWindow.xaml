<Window x:Class="AspNetCore.WebSocket.RESTfulAPI.JWT.TestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AspNetCore.WebSocket.RESTfulAPI.JWT.TestClient"
        mc:Ignorable="d"
        Title="AspNetCore.WebSocket.RESTfulAPI.JWT" Height="450" Width="800">
    <StackPanel >
        <StackPanel Orientation="Horizontal">
            <TextBlock MinWidth="100px">User name:</TextBlock>
            <TextBox Uid="UserName" x:Name="UserName" MinWidth="600px">Benom</TextBox>
        </StackPanel >
        <Button Uid="ConnectButton" x:Name="ConnectButton" Click="ConnectButton_Click">Connect</Button>
        <Button Uid="DisconnectButton" x:Name="DisconnectButton" IsEnabled="False" Click="disconnectButton_Click">Deconnect</Button>
        <StackPanel Orientation="Horizontal">
            <TextBlock MinWidth="150px">User id to send message (Guid):</TextBlock>
            <TextBox Uid="UserId" x:Name="UserId" MinWidth="150px"></TextBox>
            <TextBlock MinWidth="150px">Message to send:</TextBlock>
            <TextBox Uid="Message" x:Name="Message" MinWidth="300px"></TextBox>
        </StackPanel >
        <Button Uid="SendButton" x:Name="SendButton" IsEnabled="False" Click="sendButton_Click">Send</Button>
        <Button Uid="UserInfoButton" x:Name="UserInfoButton" IsEnabled="False" Click="userInfoButton_Click">UserInfo</Button>
        <ListView Uid="messagesList" x:Name="MessagesList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" IsHitTestVisible="True" TextWrapping="Wrap"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Window>
